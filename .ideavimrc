"" Source your .vimrc
"source ~/.vimrc

set scrolloff=5
set incsearch
map Q gq

" Custom settings
set nu
set relativenumber

"mark space as a leader key
let mapleader=" "
"Make sure that the space doesn't have any mapping henceforth
nnoremap <SPACE> <Nop>
" Custom key mapping
map <leader>f <Action>(GotoFile)
map <leader>g <Action>(FindInPath)
map <leader>b <Action>(Switcher)
map <leader>c <Action>($Copy)
map <leader>p <Action>($Paste)
map <leader>s <Action>(SaveAll)
map <leader>u <Action>(Vcs.RollbackChangedLines)
map <leader>x <Action>(CloseEditor)
map <leader>i <Action>(JumpToCaller)

" Plugin
set surround
set easymotion
